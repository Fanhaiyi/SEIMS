// utils/responseUtil.js
// 成功响应
function success(res, data = {}, message = '操作成功') {
  return res.json({
    success: true,
    message,
    ...data
  });
}

// 失败响应
function fail(res, message = '操作失败', code = 400, data = {}) {
  return res.status(code).json({
    success: false,
    message,
    ...data
  });
}

module.exports = { success, fail };